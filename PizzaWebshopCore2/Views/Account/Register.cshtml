@model PizzaWebshopCore2.Models.Account.RegisterViewModel

<div class="container">
    <div id="form" class="row">
        <form asp-antiforgery="true" asp-action="Register" asp-controller="Account" style="opacity: 0.9; margin-top: 100px;" class="col s12 m12 l6 offset-l3 blue-grey darken-1">
            <div class="row">
                <div class="input-field col s6">
                    <input asp-for="@Model.FirstName" id="first_name" type="text" class="validate" required="required">
                    <label for="first_name">First name</label>
                </div>
                <div class="input-field col s6">
                    <input asp-for="@Model.LastName" id="last_name" type="password" class="validate" required="required">
                    <label for="last_name">Last name</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input asp-for="@Model.Street" id="street" type="text" class="validate" required="required">
                    <label for="street">Street</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <input asp-for="@Model.City" id="city" type="text" class="validate" required="required">
                    <label for="city">City</label>
                </div>
                <div class="input-field col s6">
                    <input asp-for="@Model.PostalCode" id="postal_code" type="text" class="validate" required="required">
                    <label for="postal_code">Postal Code</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input asp-for="@Model.Email" id="email" type="text" class="validate" required="required">
                    <label for="email">Email</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input asp-for="@Model.Password" id="password" type="text" class="validate" required="required">
                    <label for="password">Password</label>
                </div>
            </div>
            <button type="submit" class="waves-effect waves-light btn">Register</button>
            <div asp-validation-summary="All" style="color: red; font-style: italic;" id="validation-errors"></div>
        </form>
    </div>
</div>
