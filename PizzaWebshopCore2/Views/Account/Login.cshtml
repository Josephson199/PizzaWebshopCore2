@model PizzaWebshopCore2.Models.Account.LoginViewModel

<div class="container">
    <div id="form" class="row">
        <form asp-antiforgery="true" asp-action="Login" asp-controller="Account" style="opacity: 0.9; margin-top: 100px;" class="col s12 m12 l6 offset-l3 blue-grey darken-1">
            <div class="row">
                <div class="input-field col s12">
                    <input asp-for="@Model.Email" id="email" type="text" class="validate" required="required">
                    <label for="email">Email</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input asp-for="@Model.Password" id="password" type="password" class="validate" required="required">
                    <label for="password">Password</label>
                </div>
            </div>
            <button type="submit" class="waves-effect waves-light btn">Login</button>
            <div asp-validation-summary="All" style="color: red; font-style: italic;" id="validation-errors"></div>
        </form>
    </div>
</div>
